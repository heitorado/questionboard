<h2>Welcome, Codemancer.</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="form-user-login">
    <div class="row">
      <div class="input-field col s12 m6 offset-m3 ">
        <i class="material-icons prefix">mode_edit</i>
        <%= f.text_field :login, autofocus: true, autocomplete: "login", placeholder: "login" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m6 offset-m3 ">
        <i class="material-icons prefix">lock</i>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="row" style="display: none"> <!-- this is just for not worrying about the checkbox now -->
        <div class="input-field col s12 m6 offset-m3 ">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="actions col s12 m12">
      <button id="login-button" class="waves-effect waves-light btn-large waves-input-wrapper" type="submit" name="commit" value="Enter the Temple">
        Enter the Temple
      </button>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
