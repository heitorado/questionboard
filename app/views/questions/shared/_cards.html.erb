<% questions.each do |question| %>
    <div class="col s12 m6">
    <div class="card" id=<%= "#{question.id}" %>>
        <div class="card-content">
            <span class="card-title">Card Title</span>
            <p><%= question.text %></p>

            <% unless question.answered_at.nil? %>
                <p>
                    <i> <%= "Answered at: #{question.answered_at}" %> </i>
                </p>
            <% end  %>
            <% unless question.user_id.nil? %>
                <p>
                    <i> <%= "Answered by: #{question.user.name}" %> </i>
                </p>
            <% end  %>

        </div>
        <div class="card-image">
        <%= link_to question, method: :delete, class: "btn-floating halfway-fab waves-effect waves-light red", id: "delete-button",data: { confirm: 'Are you sure?' } do %>
            <i class="material-icons">delete_forever</i>
        <% end %>
        
        <%= link_to(answer_question_path(question), :remote => true, class: "btn-floating halfway-fab waves-effect waves-light green", id: "answer-button") do %>
            <i class="material-icons">done</i>
        <% end %>
        </div>
    </div>
    </div>
<% end %>