<div class="row">
  <div class="col s12 m12">
    <p id="notice"><%= notice %></p>

    <h1>Questions</h1>

    <table>
      <thead>
        <tr>
          <th>Text</th>
          <th>Answered at</th>
          <th>Answered by</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr id=<%= "#{question.id}" %> >
            <td><%= question.text %></td>
            <td class="answered-at"><%= question.answered_at %></td>
            <td><%= question.user_id %></td>
            <td><%= link_to 'Answer', answer_question_path(question), :remote => true %></td>
            <td><%= link_to 'Edit', edit_question_path(question) %></td>
            <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Question', new_question_path %>
  </div>
</div>
